# HYPERION Elite Bot Configuration

# Bot Settings
TELEGRAM_BOT_TOKEN=your_bot_token_here
AUTHORIZED_USER_ID=your_telegram_user_id

# Performance Configuration
DEFAULT_THREADS=24
MAX_THREADS=100
DEFAULT_RATE_LIMIT=1.0
DEEP_CHECK_ENABLED=true

# Proxy System
ENABLE_PROXY_SYSTEM=true
PROXY_ROTATION_INTERVAL=300
AI_PROXY_TESTING=true
MAX_PROXIES_FAST_MODE=1000
MAX_PROXIES_AI_MODE=100

# AI Analysis Settings
AI_ANALYSIS_ENABLED=true
COMBO_QUALITY_THRESHOLD=60
DUPLICATE_DETECTION=true
DOMAIN_VALIDATION=true

# Anti-Ban Protection
ANTI_BAN_ENABLED=true
MIN_REQUEST_DELAY=1.0
MAX_REQUEST_DELAY=3.0
IP_ROTATION_ENABLED=true

# Progress & Notifications
PROGRESS_UPDATE_INTERVAL=10
HIT_NOTIFICATION_ENABLED=true
DETAILED_PROGRESS_DISPLAY=true
LIVE_STATS_ENABLED=true

# File Management
ENHANCED_HIT_FORMAT=true
CATEGORY_SEPARATION=true
RECOVERY_KEY_EXTRACTION=true
METADATA_COLLECTION=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=hyperion.log
LOG_ROTATION=true
MAX_LOG_SIZE=10MB

# Cloud Configuration (Optional)
CLOUD_STORAGE_ENABLED=false
CLOUD_PROVIDER=github
BACKUP_HITS=true

# Security
ENCRYPTION_ENABLED=true
SECURE_LOGGING=true
ACCESS_CONTROL=strict